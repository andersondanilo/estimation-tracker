<div class="row">
  <div class="col-md-6">
    <canvas id="graphPointsHours" width="100%" height="70" />
  </div>
  <div class="col-md-6">
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
<script type="text/javascript">
	var ctx = document.getElementById("graphPointsHours").getContext('2d');
	var myChart = new Chart(ctx, {
			type: 'bar',
			data: {
					labels: <%= raw @graph_story_hours.keys.to_json %>,
					datasets: [{
							label: '# of Votes',
							data: <%= raw @graph_story_hours.values.to_json %>,
							backgroundColor: [
									'rgba(255, 99, 132, 0.2)',
									'rgba(54, 162, 235, 0.2)',
									'rgba(255, 206, 86, 0.2)',
									'rgba(75, 192, 192, 0.2)',
									'rgba(153, 102, 255, 0.2)',
									'rgba(255, 159, 64, 0.2)'
							],
							borderColor: [
									'rgba(255,99,132,1)',
									'rgba(54, 162, 235, 1)',
									'rgba(255, 206, 86, 1)',
									'rgba(75, 192, 192, 1)',
									'rgba(153, 102, 255, 1)',
									'rgba(255, 159, 64, 1)'
							],
							borderWidth: 1
					}]
			},
			options: {
					scales: {
							yAxes: [{
									ticks: {
											beginAtZero:true
									}
							}]
					}
			}
	});
</script>
